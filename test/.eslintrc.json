{
	"root": true,

	"extends": "../.eslintrc-browser.json",

	"env": {

		// In source the browser env is not enabled but unit tests rely on them
		// too much and we don't run them in non-browser environments anyway.
		"browser": true
	},

	"rules": {
		// Too many errors
//		"max-len": "off",
//		"brace-style": "off",
//		"key-spacing": "off",
//		"camelcase": "off",
		"no-unused-vars": "off",
		"one-var": "off",
		"strict": "off"
//
//		// Not really too many - waiting for autofix features for these rules
//		"lines-around-comment": "off",
//		"dot-notation": "off"
	},

	"globals": {
		"expectWarning": true,
		"expectNoWarning": true,
		"compareVersions": true,
		"jQueryVersionSince": true,
		"TestManager": true,

		"Symbol": false,

		"jQuery": true,
		"QUnit": true,
		"module": true,
		"ok": true,
		"equal": true,
		"test": true,
		"asyncTest": true,
		"notEqual": true,
		"deepEqual": true,
		"strictEqual": true,
		"notStrictEqual": true,
		"start": true,
		"stop": true,
		"expect": true
	}
}
